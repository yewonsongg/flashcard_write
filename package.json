{
  "name": "flashcard_write",
  "version": "1.0.0",
  "description": "",
  "main": "build/main/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "renderer:dev": "vite",
    "renderer:build": "vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:main:watch": "concurrently --names \"main,preload\" -c \"blue,magenta\" \"tsc -p tsconfig.main.json --watch\" \"tsc -p tsconfig.preload.json --watch\"",
    "build": "npm run renderer:build && npm run build:main",
    "electron:dev": "electronmon .",
    "electron": "electron .",
    "dev": "npm run build:main && concurrently \"npm run renderer:dev\" \"npm run build:main:watch\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yewonsongg/flashcard_write.git"
  },
  "build": {
    "appId": "com.yewonsongg.studytool",
    "productName": "Study Tool",
    "files": [
      "dist/**",
      "build/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.13",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.554.0",
    "next-themes": "^0.4.6",
    "picocolors": "^1.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "bugs": {
    "url": "https://github.com/yewonsongg/flashcard_write/issues"
  },
  "homepage": "https://github.com/yewonsongg/flashcard_write#readme"
}
